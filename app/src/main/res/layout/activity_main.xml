<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redpanda.pandarezzo.MainActivity"
    android:background="@drawable/ciel_menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/bd_cartoon_shout"
        android:text="Hello Red Panda!"
        android:textColor="@color/rougeorange"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonstart"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/blanc"
        android:fontFamily="@font/bd_cartoon_shout"
        android:text="Start"
        android:textColor="@color/rougeorange"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/pandaaccueil"
        android:layout_width="285dp"
        android:layout_height="385dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panda_deux_bras_leves" />


